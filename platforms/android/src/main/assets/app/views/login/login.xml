<Page loaded="loaded">
    <ActionBar title="THEAKAGI.COM">
        <Image src="~/images/logo.png" class="logo"/>
    </ActionBar>
    <TabView class="espace" androidSelectedTabHighlightColor="#068609" tabBackgroundColor="#333333" tabTextColor="white" selectedTabTextColor="#068609">
                <TabView.items>
                    <TabViewItem title="Accueil" >
                    <TabViewItem.view>
                        
                    <GridLayout rows="auto, *">
                            <Label text="Liste des évènements : " row="0" class="titre"/>
                            <StackLayout class="bg" row="1">
                                <ListView items="{{ groceryList }}">
                                    <ListView.itemTemplate height="50">
                                        <StackLayout>
                                            <Label text="{{ titre }}" textWrap="true" class="titreEvenement" />
                                            <Label text="{{ lieu }}" textWrap="true" class="lieuEvenement" />
                                            <Label text="{{ date }}" textWrap="true" class="dateEvenement" />
                                            <button text="Voir plus" class="bouttonEvenement" value="{{ id }}"></button>
                                        </StackLayout>
                                    </ListView.itemTemplate>
                                </ListView>
                            </StackLayout>
                        </GridLayout>


                    </TabViewItem.view>
                    </TabViewItem>
                    <TabViewItem title="Compte">
                    <TabViewItem.view>
                        <Label text="Connexion" />
                    </TabViewItem.view>
                    </TabViewItem>
                </TabView.items>
    </TabView>
</Page>